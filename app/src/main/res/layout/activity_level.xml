<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.example.abdenour.gamemagic.Level">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:text="Click on a level"
        android:layout_gravity="center"
        android:gravity="center"/>

    <Button
        android:id="@+id/NewGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:onClick="Onclickfacile"
        android:text="level 1 " />

    <Button
        android:id="@+id/ButtAboutgame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:onClick="Onclickmoyen"
        android:text="level 2" />

    <Button
        android:id="@+id/ExitGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:onClick="Onclickhard"
        android:text="level 3" />


</LinearLayout>
